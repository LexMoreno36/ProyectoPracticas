<body>
    <header class="header">
        <div class="container">
            <h1>Issue Manager</h1>
        </div>
    </header>

    <main class="main container" id="root">
        <div class="" id="root">
                <h1 class="">{{msg}}</h1>
                <select class="form-select" aria-label="Default select example">
                    <option selected>Open this select menu</option>
                    <option v-for="item in asigneeList">{{item.name}}</option>
                </select>
            </div>

        <button class="button btn-add" id="addIssueBtn">+ Add Issue</button>
        <div class="issues-grid" id="issuesGrid"></div>

    </main>

    <footer>
        <script>
            const url = "https://jsonplaceholder.typicode.com/";
            var app = new Vue({
                el: "#root",
                data: {
                    /*msg: "Proyecto",*/
                    asigneeList: []
                },

                created: function () {
                    axios.get(url + "users")
                        .then(function (response) {
                            /*console.table(response.data);*/
                            app.asigneeList = response.data;
                        })
                        .catch(function (error) {
                            console.log(error);
                        })
                }
            });

